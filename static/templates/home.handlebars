<script id="entry-template" type="text/x-handlebars-template">
  <div class="entry">
    <h1>{{title}}</h1>
    <div class="body">
      {{body}}
    </div>
  </div>
</script>

<script id="personal-accounts-template" type="text/x-handlebars-template">
  <div class="card">
	<div class="card-header">		
		<h5 class="mb-0"><i class="fa fa-money-check mr-2" />Your Accounts</h5>
	</div>
	<ul class="list-group list-group-flush">
		{{#each accounts}}
		<li class="list-group-item">
			<h5 class="mb-1">{{name}}</h5>
			<p class="mb-1"><strong>Account: </strong>{{number}}</p>
			<p class="mb-1"><strong>Balance: </strong>${{balance}}</p>
			<div class="accounts_list_transactions" data-account="{{number}}">
				<div class="targetBox">
					<p class="p-1">
						<i class="fa fa-money-bill m-1" />
						Transactions
					</p>
				</div>
			</div>
		</li>
		{{/each}}		
	</ul>
</div>
</script>

